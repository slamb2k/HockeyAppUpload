    "category": "Deploy",
    "visibility": [
        "Deploy"
    ],
    "author": "Simon Lamb",
    "version": {
        "Major": 1,
        "Minor": 0,
        "Patch": 28
    },
    "demands": [],
    "minimumAgentVersion": "1.83.0",
    "groups": [
        {
            "name": "hockeyAppOptions",
            "displayName": "HockeyApp Options",
            "isExpanded": true
        }
